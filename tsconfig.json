{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules"
  ],
  "filesGlob": [
    "client/**/*.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": true
  },
  "files": [
    "client/bootstrap.ts",
    "client/spec/items.spec.ts",
    "client/src/app.ts",
    "client/src/items.ts",
    "client/temp/model.ts",
    "client/typings/falcor-http-datasource.d.ts",
    "client/typings/falcor.d.ts",
    "client/vendor.ts"
  ]
}
